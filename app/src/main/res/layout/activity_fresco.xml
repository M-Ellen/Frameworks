<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:orientation="horizontal"
    tools:context="com.gotechcn.frameworks.fresco.FrescoActivity">

    <Spinner
        android:id="@+id/spinner"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_image_view1"
        android:layout_width="@dimen/fresco_icon_size"
        android:layout_height="@dimen/fresco_icon_size"
        android:layout_marginTop="5dp"
        fresco:backgroundImage="@color/bg_color_blue"
        fresco:placeholderImage="@mipmap/fresco_placeholder_image"
        fresco:failureImage="@mipmap/fresco_failure_image"
        fresco:retryImage="@mipmap/fresco_retry_image"
        fresco:progressBarImage="@mipmap/fresco_progressbar_image"
        fresco:progressBarAutoRotateInterval="5000"
        fresco:roundedCornerRadius="30dp"
        fresco:roundBottomLeft="true"
        fresco:roundBottomRight="true"
        fresco:roundBottomEnd="false"
        fresco:roundBottomStart="true"
        />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_image_view2"
        android:layout_width="@dimen/fresco_icon_size"
        android:layout_height="@dimen/fresco_icon_size"
        android:layout_marginTop="5dp"
        fresco:overlayImage="@mipmap/bitmap6"
        fresco:placeholderImage="@mipmap/fresco_placeholder_image"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_image_view3"
        android:layout_width="@dimen/fresco_icon_size"
        android:layout_height="@dimen/fresco_icon_size"
        android:layout_marginTop="5dp"
        fresco:placeholderImage="@mipmap/fresco_placeholder_image"
        fresco:roundAsCircle="true"
        fresco:roundingBorderWidth="4dp"
        fresco:roundingBorderPadding="10dp"
        fresco:roundingBorderColor="@color/colorAccent"

        />


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_image_view4"
        android:layout_width="@dimen/fresco_icon_size"
        android:layout_height="@dimen/fresco_icon_size"
        android:layout_marginTop="5dp"
        fresco:actualImageScaleType="centerCrop"

        />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/gif_image"
            android:layout_width="@dimen/fresco_icon_size"
            android:layout_height="@dimen/fresco_icon_size"
            android:layout_marginTop="5dp"
            />


    </LinearLayout>
