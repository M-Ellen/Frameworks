<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Volley的使用"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn_volley_get"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="GET" />

    <Button
        android:id="@+id/btn_volley_post"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="POST" />

    <Button
        android:id="@+id/btn_volley_json"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="请求JSON数据" />

    <Button
        android:id="@+id/btn_volley_imagerequest"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="imagerequest加载图片" />

    <Button
        android:id="@+id/btn_volley_imageloader"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="imageloader加载图片" />

    <Button
        android:id="@+id/btn_volley_networkImageView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="networkImageView加载图片" />

    <Button
        android:id="@+id/btn_volley_xml"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="自定义请求xml数据" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示结果:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_volley_result"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:visibility="gone" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_volley_networkresult"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="5dp"
            android:visibility="gone" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_volley_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ScrollView>


</LinearLayout>
